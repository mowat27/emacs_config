# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi


# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

function tree {
  if [[ -z "$1" ]]
  then
    LOC='.'
   else
    LOC=$1
  fi
  find $LOC -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'
}

alias poly="source $HOME/.poly/polygot.bash"
poly load java ruby rails mysql emacs

alias ll='ls -ltr | tail'
alias l='ls -1tr | tail'
alias fndr='open /System/Library/CoreServices/Finder.app "$PWD"'
alias gc='git commit -m'
alias ga='git add'
alias gs='git status'
alias glo='git log --oneline'
alias gl="git log --graph --pretty=\"format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset\""
alias be="bundle exec"
alias ec='cd ~/edgecase; pwd'
alias sub='sublime'


PS1='\[\033[0;33m\]$(rvm current)\[\033[0m\]:$(basename $PWD) \[\033[0m\]$ '
CLICOLOR=1; export CLICOLOR
LSCOLORS=GxFxCxDxBxegedabagaced; export LSCOLORS


